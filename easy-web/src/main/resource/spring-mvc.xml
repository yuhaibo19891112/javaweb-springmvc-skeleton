    &lt;!&ndash; freemarker的配置 &ndash;&gt;
    <bean id="freemarkerConfigurer" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/WEB-INF/view/"/>
        <property name="defaultEncoding" value="utf-8"/>
        <property name="freemarkerSettings" ref="freemarkerConfiguration" />
        <property name="freemarkerVariables">
            <map>
                <entry key="xml_escape" value-ref="fmXmlEscape" />
                <entry key="imgHost" value="${imghost.url}" />
                <entry key="pageResourceUrl" value="${page.resource.url}" />

                &lt;!&ndash;下面四个是在下面定义的&ndash;&gt;
                <entry key="extends" value-ref="extendsDirective"/>
                <entry key="override" value-ref="overrideDirective"/>
                <entry key="block" value-ref="blockDirective"/>
                <entry key="super" value-ref="superDirective"/>
                <entry key="passportLoginUrlPrefix" value="${passportLoginUrlPrefix}" />
                <entry key="passportRegisterPrefix" value="${passportRegisterPrefix}" />

                <entry key="vivoportalWebUrl" value="${vivoportal.web.url}" />
                <entry key="cdnDomainWeb" value="${cdn.domain.web}" />

                &lt;!&ndash; Freemarker自定义方法 &ndash;&gt;
                <entry key="globalHtmlGenerator" value-ref="globalHtmlGenerator" />
                <entry key="globalSeoGenerator" value-ref="globalSeoGenerator" />

            </map>
        </property>
    </bean>
    <bean id="fmXmlEscape" class="freemarker.template.utility.XmlEscape"/>

    &lt;!&ndash; Freemarker模板集成指令 &ndash;&gt;
    <bean id="blockDirective" class="cn.org.rapid_framework.freemarker.directive.BlockDirective"/>
    <bean id="extendsDirective" class="cn.org.rapid_framework.freemarker.directive.ExtendsDirective"/>
    <bean id="overrideDirective" class="cn.org.rapid_framework.freemarker.directive.OverrideDirective"/>
    <bean id="superDirective" class="cn.org.rapid_framework.freemarker.directive.SuperDirective"/>

